# Ultimate Lyra Ecosystem Configuration Example
# Copy this file to .env and configure with your actual values

# ============================================================================
# CORE SYSTEM CONFIGURATION
# ============================================================================
PORT=3100
LYRA_API_TOKEN=your_secure_api_token_here
LYRA_API_BASE=http://localhost:3100

# Trading Mode Configuration
LIVE_MODE=false
LIVE_TRADING=false
PAPER_TRADING=true

# ============================================================================
# EXCHANGE API CONFIGURATION
# ============================================================================

# OKX Exchange (Primary)
OKX_API_KEY=your_okx_api_key
OKX_SECRET_KEY=your_okx_secret_key
OKX_PASSPHRASE=your_okx_passphrase
OKX_SANDBOX=true

# Binance Exchange
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_TESTNET=true

# Gate.io Exchange
GATEIO_API_KEY=your_gateio_api_key
GATEIO_SECRET_KEY=your_gateio_secret_key

# WhiteBIT Exchange
WHITEBIT_API_KEY=your_whitebit_api_key
WHITEBIT_SECRET_KEY=your_whitebit_secret_key

# BTC Markets Exchange
BTCMARKETS_API_KEY=your_btcmarkets_api_key
BTCMARKETS_SECRET_KEY=your_btcmarkets_secret_key

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================

# Trading Pairs
TRADING_PAIRS=BTC-USDT,ETH-USDT,ADA-USDT,SOL-USDT,MATIC-USDT,DOT-USDT,LINK-USDT,UNI-USDT
PRIMARY_PAIRS=BTC-USDT,ETH-USDT,ADA-USDT
SECONDARY_PAIRS=SOL-USDT,MATIC-USDT,DOT-USDT,LINK-USDT,UNI-USDT

# Performance Level (CONSERVATIVE, OPTIMIZED, AGGRESSIVE)
PERFORMANCE_LEVEL=OPTIMIZED

# AI Configuration
CONFIDENCE_THRESHOLD=0.90
AI_MODELS_ENABLED=true
QUANTUM_AI_ENABLED=true

# ============================================================================
# RISK MANAGEMENT
# ============================================================================

# Core Protection
NEVER_SELL_AT_LOSS=true
MAX_DAILY_LOSS=500
MAX_POSITION_SIZE=2000
MIN_TRADE_AMOUNT=50
MAX_TRADE_AMOUNT=2000

# Portfolio Management
TRADING_CAPITAL=10000
EMERGENCY_RESERVE_PERCENT=10
MAX_CORRELATION=0.70
RISK_MANAGEMENT=true

# ============================================================================
# PERFORMANCE PROFILES
# ============================================================================

# Conservative Profile
CONSERVATIVE_TRADE_AMOUNT=100
CONSERVATIVE_MAX_DAILY_LOSS=200
CONSERVATIVE_MAX_POSITION_SIZE=500
CONSERVATIVE_TRADING_CAPITAL=5000
CONSERVATIVE_MIN_TRADE=50
CONSERVATIVE_MAX_TRADE=500
CONSERVATIVE_PROFIT_TARGET=1.5

# Optimized Profile (Default)
OPTIMIZED_TRADE_AMOUNT=200
OPTIMIZED_MAX_DAILY_LOSS=500
OPTIMIZED_MAX_POSITION_SIZE=1000
OPTIMIZED_TRADING_CAPITAL=10000
OPTIMIZED_MIN_TRADE=100
OPTIMIZED_MAX_TRADE=1000
OPTIMIZED_PROFIT_TARGET=2.4

# Aggressive Profile
AGGRESSIVE_TRADE_AMOUNT=500
AGGRESSIVE_MAX_DAILY_LOSS=1000
AGGRESSIVE_MAX_POSITION_SIZE=2000
AGGRESSIVE_TRADING_CAPITAL=20000
AGGRESSIVE_MIN_TRADE=200
AGGRESSIVE_MAX_TRADE=2000
AGGRESSIVE_PROFIT_TARGET=3.0

# ============================================================================
# SYSTEM FEATURES
# ============================================================================

# Automation
AUTO_COMPOUND=true
SCALE_WITH_PROFITS=true
CONTINUOUS_LEARNING=true

# Monitoring
ENABLE_LOGGING=true
LOG_LEVEL=info
API_RATE_LIMIT=300

# ============================================================================
# TELEGRAM INTEGRATION (Optional)
# ============================================================================
ENABLE_TELEGRAM=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
TELEGRAM_BOT_PORT=3101

# ============================================================================
# EXTERNAL APIs (Optional)
# ============================================================================

# News and Sentiment
NEWS_API_KEY=your_news_api_key
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key

# Market Data
POLYGON_API_KEY=your_polygon_api_key
FINNHUB_API_KEY=your_finnhub_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# AI Services
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_API_KEY=your_google_api_key
COHERE_API_KEY=your_cohere_api_key

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=sqlite:///lyra_ecosystem.db
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
SECRET_KEY=your_secret_key_for_encryption
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# ============================================================================
# ADVANCED FEATURES
# ============================================================================

# Shadow Trading
SHADOW_TRADING_ENABLED=false
CONTROL_COMPARISON_ENABLED=false

# Maximum Capacity Testing
MAX_CAPACITY_TESTING=false
STRESS_TESTING_ENABLED=false

# Forensic Analysis
FORENSIC_LOGGING=true
AUDIT_TRAIL_ENABLED=true
